function setup_dotfiles {
    cwd="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
    cp -f ${cwd}/.bash_profile ~/.bash_profile
    cp -f ${cwd}/.bashrc ~/.bashrc
    cp -f ${cwd}/.bash_prompt ~/.bash_prompt
    cp -f ${cwd}/.aliases ~/.aliases
    cp -f ${cwd}/.exports ~/.exports
    cp -f ${cwd}/.functions ~/.functions
    cp -f ${cwd}/.paths ~/.paths
    cp -f ${cwd}/.vimrc ~/.vimrc
    cp -rf ${cwd}/.vim ~/.vim
}

function findit {
    find . -exec grep -nHi $1 {} \; -maxdepth $2;
    }

function replaceit {
    EXT=$1
    FIND=$2
    REPLACE=$3
    for i in `find . -name "$EXT"`
    do
        echo "Processing $i"
        chmod +w $i
        sed "s/$FIND/$REPLACE/g" $i > TEMPFILE
        mv TEMPFILE $i
    done
    }
